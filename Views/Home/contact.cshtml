@{
    ViewBag.Title = "contact";

    if (Session["typeo"] == "home")
    {
        Layout = "~/Views/Shared/_homeLayout.cshtml";
    }
    else if (Session["typeo"] == "teacher")
    {
        Layout = "~/Views/Shared/_teacherLayout.cshtml";
    }
    else if (Session["typeo"] == "student")
    {
        Layout = "~/Views/Shared/_studentLayout.cshtml";
    }
    else if (Session["typeo"] == "admin")
    {
        Layout = "~/Views/Shared/_adminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_homeLayout.cshtml";
    }
    
}

.img-circle {
border-radius: 50%;
}

<section class="contact-wthree jarallax" id="contact">
	<div class="container">
		<h3 class="text-center">Contact Us</h3>
		<div class="col-lg-2 col-md-2 col-sm-2" data-aos="zoom-in">
			<img src="~/images/zzz.JPG" alt="Universal Schnittstelle" class="img-circle img-responsive">
		</div>
		<div class="col-lg-10 col-md-10 col-sm-10" data-aos="zoom-in">
			<h4>Be In Touch With Us</h4>
			<p class="contact-agile">We are always available</p>
		</div>
		<div class="col-lg-12" data-aos="zoom-in">
			<ul class="contact-info">
				<li>
					<i class="fa fa-phone-square" aria-hidden="true"></i>
					<p class="contact-p1">0321 4884093</p>
					<p class="contact-p2">0335 1447545</p>
				</li>
				<li>
					<i class="fa fa-envelope" aria-hidden="true"></i>
					<p class="contact-p1"><a href="mailto:mail1@example.com">bcsf14a030@pucit.edu.pk</a></p>
					<p class="contact-p2"><a href="mailto:mail2@example.com">mwaqaryb@gmail.com</a></p>
				</li>
				<li>
					<i class="fa fa-address-book" aria-hidden="true"></i>
					<p class="contact-p1">PUCIT Mall Road,</p>
					<p class="contact-p2">Lahore, Pakistan.</p>
				</li>
			</ul>
		</div>	
		<div class="clearfix"></div>	
		<form action="#" method="post" name="sentMessage" id="contactForm" novalidate>
            <div class="col-lg-4 col-md-4 col-sm-4" data-aos="zoom-in">    
				<div class="control-group form-group">
                    <div class="controls">
                        <label>Full Name:</label>
                        <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block"></p>
                    </div>
				</div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4" data-aos="zoom-in">	
                <div class="control-group form-group">
					<div class="controls">
                        <label>Phone Number:</label>
						<input type="tel" class="form-control" id="phone" required data-validation-required-message="Please enter your phone number.">
                    </div>
                </div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4" data-aos="zoom-in">			
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Email Address:</label>
                        <input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">
                    </div>
                </div>
			</div>
			<div class="clearfix"></div>
			<div class="col-lg-12" data-aos="zoom-in">	
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Message:</label>
                        <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
					</div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
			</div>
			<div class="col-lg-12" data-aos="zoom-in">	
                <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
			<div class="clearfix"></div>	
		</form>	
	</div>
</section>